<body class='pdf'>
  <h1><%= invoice[:job] %></h1>
  <h4><%= invoice[:date_range] %></h4>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Time Spent<br/>(min)</th>
        <th>Summary</th>
      </tr>
    </thead>
    <tbody>
      <%  invoice[:time_entries].each do |te|%>
        <tr>
          <td><%= te[:date] %> </td>
          <td><%= te[:time_spent] %></td>
          <td><%= te[:summary] %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</body>

<div id='pdf_totals'> 
  <h4><strong><%=( invoice[:total_minutes]) %> minutes at <%= invoice[:hourly_rate] %>/hour</strong></h4>

  <h4><strong>Sub-total: <%= invoice[:sub_total] %></strong></h4>
  <h4><strong>Tax: <%= invoice[:tax] %></strong> <em>(Tax Rate: <%=  invoice[:tax_rate] %>%)</em></h4>
  <h4><strong>Total: <%= invoice[:total] %></strong></h4>
</div>
